{
  "name": "@twilio-paste/customization",
  "version": "2.1.1",
  "description": "The Customization Provider provides functionality to change token values and the style of Paste components.",
  "author": "Twilio Inc.",
  "license": "MIT",
  "main": "src/index.tsx",
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && NODE_ENV=production node build.js && tsc",
    "build:js": "NODE_ENV=development node build.js",
    "build:props": "typedoc --tsconfig ./tsconfig.json --json ./dist/prop-types.json",
    "clean": "rm -rf ./dist && rm -rf node_modules",
    "tsc": "tsc"
  },
  "dependencies": {
    "deepmerge": "4.2.2",
    "lodash.merge": "^4.6.2"
  },
  "peerDependencies": {
    "@twilio-paste/animation-library": "workspace:*",
    "@twilio-paste/design-tokens": "workspace:*",
    "@twilio-paste/style-props": "workspace:*",
    "@twilio-paste/styling-library": "workspace:*",
    "@twilio-paste/theme": "workspace:*",
    "@twilio-paste/types": "workspace:*",
    "react": "^16.8.6 || ^17.0.2",
    "react-dom": "^16.8.6 || ^17.0.2"
  },
  "devDependencies": {
    "@twilio-paste/animation-library": "workspace:*",
    "@twilio-paste/design-tokens": "workspace:*",
    "@twilio-paste/style-props": "workspace:*",
    "@twilio-paste/styling-library": "workspace:*",
    "@twilio-paste/theme": "workspace:*",
    "@twilio-paste/types": "workspace:*",
    "react": "^16.8.6 || ^17.0.2",
    "react-dom": "^16.8.6 || ^17.0.2"
  }
}
