{
  "name": "@twilio-paste/theme",
  "version": "5.3.1",
  "description": "Paste Design System Theme Package which provides support for APIs to theme UIs and components.",
  "author": "Twilio Inc.",
  "license": "MIT",
  "main": "src/index.tsx",
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && NODE_ENV=production node build.js && tsc",
    "build:js": "NODE_ENV=development node build.js",
    "build:props": "typedoc --tsconfig ./tsconfig.json --json ./dist/prop-types.json",
    "clean": "rm -rf ./dist && rm -rf node_modules",
    "tsc": "tsc"
  },
  "peerDependencies": {
    "@twilio-paste/animation-library": "workspace:*",
    "@twilio-paste/color-contrast-utils": "workspace:*",
    "@twilio-paste/design-tokens": "workspace:*",
    "@twilio-paste/styling-library": "workspace:*",
    "@twilio-paste/types": "workspace:*",
    "react": "^16.8.6 || ^17.0.2",
    "react-dom": "^16.8.6 || ^17.0.2"
  },
  "devDependencies": {
    "@twilio-paste/animation-library": "workspace:*",
    "@twilio-paste/color-contrast-utils": "workspace:*",
    "@twilio-paste/design-tokens": "workspace:*",
    "@twilio-paste/styling-library": "workspace:*",
    "@twilio-paste/types": "workspace:*",
    "react": "^16.8.6 || ^17.0.2",
    "react-dom": "^16.8.6 || ^17.0.2"
  }
}
